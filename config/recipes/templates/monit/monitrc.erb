set daemon 30

set logfile /var/log/monit.log
set idfile /var/lib/monit/id
set statefile /var/lib/monit/state

set eventqueue
  basedir /var/lib/monit/events
  slots 100

set mailserver smtp.gmail.com port 587
  username "<%= ENV['GMAIL_EMAIL'] %>" password "<%= ENV['GMAIL_PASSWORD'] %>"
  using tlsv1
  with timeout 30 seconds

set alert <%= ENV['ALERT_EMAIL'] %>

set httpd port <%= ENV['MONIT_WEB_PORT'] %>
  allow <%= ENV['MONIT_USERNAME'] %>:"<%= ENV['MONIT_PASSWORD'] %>"

check system <%= application %>
  if loadavg(5min) > 2 for 2 cycles then alert
  if memory > 75% for 2 cycles then alert
  if cpu(user) > 75% for 2 cycles then alert

include /etc/monit/conf.d/*
